#include <iostream>
#include <vector>
#include <fstream>
using namespace std;

struct Employee
{
    int id;
    string name;
    float monthlySalary;
};

int main()
{
    vector<Employee> employees;
    int n;
    float limit;

    cout << "Enter number of employees: ";
    cin >> n;

    for(int i = 0; i < n; i++)
    {
        Employee e;
        cout << "\nEnter Employee ID: ";
        cin >> e.id;
        cout << "Enter Name: ";
        cin >> e.name;
        cout << "Enter Monthly Salary: ";
        cin >> e.monthlySalary;

        employees.push_back(e);
    }

    cout << "\nEnter yearly salary limit: ";
    cin >> limit;

    ofstream fout("high_salary.txt");

    if(!fout)
    {
        cout << "File could not be opened!\n";
        return 0;
    }

    for(int i = 0; i < n; i++)
    {
        float yearly = employees[i].monthlySalary * 12;

        if(yearly > limit)
        {
            fout << employees[i].id << " "
                 << employees[i].name << " "
                 << yearly << endl;
        }
    }

    fout.close();

    ifstream fin("high_salary.txt");

    if(!fin)
    {
        cout << "File could not be opened for reading!\n";
        return 0;
    }

    cout << "\nEmployees with High Salary:\n";
    int id;
    string name;
    float salary;

    while(fin >> id >> name >> salary)
    {
        cout << "ID: " << id
             << " Name: " << name
             << " Yearly Salary: " << salary << endl;
    }

    fin.close();
    return 0;
}
